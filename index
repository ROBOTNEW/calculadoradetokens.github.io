<body>
    <div class="container">
        <h2>Calculadora de Tokens</h2>
        <label for="valorMilhaoEnviados">Valor por milhão de tokens enviados (em R$):</label>
        <input type="number" id="valorMilhaoEnviados" placeholder="Ex: 20.00" step="0.01" required>

        <label for="valorMilhaoRecebidos">Valor por milhão de tokens recebidos (em R$):</label>
        <input type="number" id="valorMilhaoRecebidos" placeholder="Ex: 15.00" step="0.01" required>

        <label for="limiteMensal">Limite Mensal (em R$):</label>
        <input type="number" id="limiteMensal" placeholder="Ex: 500.00" step="0.01" required>

        <label for="tokensEnviados">Tokens Enviados (em Milhões):</label>
        <input type="number" id="tokensEnviados" placeholder="Ex: 0.3" step="0.01" required>

        <label for="tokensRecebidos">Tokens Recebidos (em Milhões):</label>
        <input type="number" id="tokensRecebidos" placeholder="Ex: 0.5" step="0.01" required>

        <button onclick="calcularGasto()">Calcular</button>
        <div class="resultado">
            <p id="totalTokens">Tokens Totais: -</p>
            <p id="custoTotal">Custo Mensal: R$ -</p>
        </div>

        <h2>Orçamento Mensal</h2>
        <div class="progress-bar-container">
            <div id="progress-bar" class="progress-bar">0%</div>
        </div>
    </div>

    <script>
        function calcularGasto() {
            const valorMilhaoEnviados = parseFloat(document.getElementById('valorMilhaoEnviados').value);
            const valorMilhaoRecebidos = parseFloat(document.getElementById('valorMilhaoRecebidos').value);
            const limiteMensal = parseFloat(document.getElementById('limiteMensal').value);
            const tokensEnviados = parseFloat(document.getElementById('tokensEnviados').value) || 0;
            const tokensRecebidos = parseFloat(document.getElementById('tokensRecebidos').value) || 0;

            // Validações básicas
            if (isNaN(valorMilhaoEnviados) || isNaN(valorMilhaoRecebidos) || isNaN(limiteMensal)) {
                alert('Por favor, insira valores válidos.');
                return;
            }

            // Cálculos
            const custoEnviados = valorMilhaoEnviados * tokensEnviados;
            const custoRecebidos = valorMilhaoRecebidos * tokensRecebidos;
            const custoTotal = custoEnviados + custoRecebidos;
            const totalTokens = tokensEnviados + tokensRecebidos; // Em milhões
            const percentualGasto = (custoTotal / limiteMensal) * 100;

            // Atualizando resultados
            document.getElementById('totalTokens').textContent = `Tokens Totais: ${totalTokens.toLocaleString()}M`;
            document.getElementById('custoTotal').textContent = `Custo Mensal: R$ ${custoTotal.toFixed(2)}`;

            // Atualizando barra de progresso
            atualizarBarraDeProgresso(percentualGasto);
        }

        function atualizarBarraDeProgresso(percentual) {
            const progressBar = document.getElementById('progress-bar');
            progressBar.style.width = `${Math.min(percentual, 100)}%`;
            progressBar.textContent = `${Math.min(percentual, 100).toFixed(0)}%`;

            // Alterando cor conforme o percentual
            if (percentual < 80) {
                progressBar.className = 'progress-bar';
            } else if (percentual >= 80 && percentual < 100) {
                progressBar.className = 'progress-bar yellow';
            } else {
                progressBar.className = 'progress-bar red';
            }
        }
    </script>
</body>
